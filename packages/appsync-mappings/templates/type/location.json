{
  "name": "Locations",
  "fields": [
    {
      "name": "location_id",
      "props": {
        "appsync": {
          "type": "ID!"
        },
        "dynamo": {
          "type": "S",
          "isKey": true,
          "value": "$context.stash.location_id"
        },
        "es": {
        }
      }
    },
    {
      "name": "owner_id",
      "props": {
        "appsync": {
          "type": "ID!"
        },
        "dynamo": {
          "type": "S",
          "isKey": true,
          "value": "$context.stash.owner_id"
        },
        "es": {
        }
      }
    },
    {
      "name": "general",
      "props": {
        "appsync": {
          "type": "General"
        },
        "dynamo": {
          "type": "M",
          "ref": {
            "path": "../common/type",
            "args": {
              "type": "$context.arguments.location.general.type",
              "name": "$context.arguments.location.general.name"
            }
          }
        },
        "es": {
        }
      }
    },
    {
      "name": "iso",
      "props": {
        "appsync": {
          "type": "Iso"
        },
        "dynamo": {
          "type": "M",
          "ref": {
            "path": "../common/type",
            "args": {
              "shortName": "$context.arguments.location.iso.shortName",
              "alpha3": "$context.arguments.location.iso.alpha3",
              "alpha2": "$context.arguments.location.iso.alpha2",
              "numeric": "$context.arguments.location.iso.numeric"
            }
          }
        },
        "es": {
        }
      }
    },
    {
      "name": "geo",
      "props": {
        "appsync": {
          "type": "Geo"
        },
        "dynamo": {
          "type": "M",
          "ref": {
            "path": "../common/type",
            "args": {
              "type": "$context.arguments.location.type",
              "long": "$context.arguments.location.lat",
              "lat": "$context.arguments.location.long"
            }
          }
        },
        "es": {
        }
      }
    },
    {
      "name": "shortDescription",
      "props": {
        "appsync": {
          "type": "Locales"
        },
        "dynamo": {
          "type": "M",
          "ref": {
            "path": "../common/type/locales.json",
            "args": {
              "code": "$context.arguments.location.shortDescription.code",
              "default": "$context.arguments.location.shortDescription.default"
            }
          }
        },
        "es": {
        }
      }
    },
    {
      "name": "longDescription",
      "props": {
        "appsync": {
          "type": "Locales"
        },
        "dynamo": {
          "type": "M",
          "ref": {
            "path": "../common/type/locales.json",
            "args": {
              "code": "$context.arguments.location.longDescription.code",
              "default": "$context.arguments.location.longDescription.default"
            }
          }
        },
        "es": {
        }
      }
    },
    {
      "name": "images",
      "props": {
        "appsync": {
          "type": "[String]"
        },
        "dynamo": {
          "type": "S",
          "list": true,
          "value": "[\"$context.arguments.location.images\"]"
        },
        "es": {
        }
      }
    }
  ]
}